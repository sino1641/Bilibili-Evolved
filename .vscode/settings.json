        "bofqi",
        "camelcase",
        "clipboardy",
        "cntr",
        "compositionend",
        "compositionstart",
        "csrf",
        "ctnr",
        "danmakus",
        "debounced",
        "devtools",
        "downloaders",
        "dpis",
        "durl",
        "epid",
        "esbuild",
        "githubusercontent",
        "haruna",
        "hdslb",
        "iconfont",
        "jinkela",
        "jsdelivr",
        "jszip",
        "kanban",
        "kichiku",
        "linebreak",
        "materialdesignicons",
        "medialist",
        "mimetype",
        "minmax",
        "mixins",
        "overscroll",
        "pako",
        "plusplus",
        "popperjs",
        "preload",
        "protobuf",
        "reimu",
        "reloadable",
        "reloadables",
        "repo",
        "repost",
        "reposts",
        "roomid",
        "saturationv",
        "superchat",
        "tabindex",
        "truetype",
        "uname",
        "woff",
        "xmlhttp"
    ],
    "javascript.validate.enable": true,
    "svg.preview.background": "transparent",
    "prettier.semi": false,
    "typescript.format.semicolons": "remove",
    "javascript.format.semicolons": "remove",
    "files.associations": {
        // don't highlight generated files
        "*.user.js": "plaintext",
        "**/dist/**/*.js": "plaintext"
    },
    "search.exclude": {
        "**/dev": true,
        "**/dist": true,
        "**/yarn.lock": true
    },
    "[typescript]": {
      "editor.defaultFormatter": "vscode.typescript-language-features"
    },
}