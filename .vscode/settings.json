        "**/build/**",
        "**/.vscode/**",
        "**/.github/**",
        "**/_output/**",
        "**/*.min.*",
        "**/*.map",
        "**/.next/**",
        "**/.vs/**",
        "**/build-scripts/**"
    ],
    "cSpell.words": [
